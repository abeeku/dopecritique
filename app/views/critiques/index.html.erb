<h1>Listing critiques</h1>

<table>
  <thead>
    <tr>
      <th>Song</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @critiques.each do |critique| %>
      <tr>
        <td><%= critique.song %></td>
        <td><%= critique.description %></td>
        <td><%= critique.user_id %></td>
        <td><%= link_to 'Show', critique %></td>
        <td><%= link_to 'Edit', edit_critique_path(critique) %></td>
        <td><%= link_to 'Destroy', critique, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Critique', new_critique_path %>
