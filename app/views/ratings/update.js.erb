
<% if @music %>
  $('#music_<%= @music.id %>_rating').raty({
    score: <%= get_rating(@music).score %>,
    path: '/assets',
    click: function(score, evt) {
      $.ajax({
        url: '/ratings/' + <%= get_rating(@music).id %>,
        type: 'PATCH',
        data: { score: score }
      });
    }
  });



<% else %>

 $('#star').raty({
    readOnly: true,
    score: <%= @artist.average_rating if @artist %><%= @mixtape.average_rating if @mixtape %>,
    path: '/assets'
  });

$('#user_star').raty({
  score: <%= @rating.score %>,
  path: '/assets',
  click: function(score, evt) {
    $.ajax({
      url: '/ratings/' + <%= @rating.id %>,
      type: 'PATCH',
      data: { score: score }
    }).done(function (data){});
  }
});

<% end %>