<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @artist.name %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @artist.bio %>
</p>

<div id="musics_wrapper">
  <%= render @artist.musics  %>

<h1>Add new music for this artist</h1>
<p>
<%= form_for ([@artist,@artist.musics.build]) do |f| %>
 <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :link %><br>
    <%= f.text_area :link %>
  </div>
 <%# f.hidden_field :artist_id, @artist.id %>
<%= f.button :submit, class: 'btn' %>
<% end %>
</p>


<p><%=pluralize(@artist.likers(User).count, "like")%></p>
<% if user_signed_in?  %>
  <%if current_user.likes?(@artist) %>
    <%= link_to 'Unlike',like_artist_path(@artist),method: :post, class: "glyphicon glyphicon-thumbs-up" %>
  <% else %>
    <%= link_to 'Like',like_artist_path(@artist),method: :post, class: "glyphicon glyphicon-thumbs-up" %>
  <% end %>
<% else %>
<%= link_to "Sign in to like this song", new_user_session_path %>
<% end %>


<%= link_to 'Edit', edit_artist_path(@artist) %> |
<%= link_to 'Back', artists_path %>
