
  <% if current_user.following?(artist) %>
    <%= button_to("Unfollow #{artist.name}", unfollow_artist_path(artist.id), :method => :delete, :remote => true, class: "btn btn-danger") %>
  <% else %>
    <%= button_to("Follow #{artist.name}", follow_artist_path(artist.id), :remote => true, class: "btn btn-primary") %>
  <% end %>
